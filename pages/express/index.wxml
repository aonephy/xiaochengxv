<view class="page">
   
    <view class="page__bd">
      <view class="weui-btn-area">
       
          <view class="weui-cells weui-cells_after-title box">
            <view class="weui-cell">
                <view class="weui-cell__bd">
                    <input type='text' focus='{{focus}}' bindinput='Input' placeholder="请输入快递单号" ></input>
                </view>
            </view>
          </view>
          <view class="box">
              <button type='primary' bindtap='Submit'>查询</button>
          </view>
          
          <view class="box result">
              <text>{{content}}</text>
          </view>
      
      </view>
    </view>

</view>