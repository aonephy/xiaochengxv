.page__title{
  text-align: center;
  padding: 0px;
  font-size: 1.3em;
}
.page__hd{
  background: #64a4fc;
  color: #fff;
  font-size: 1.2em;
  position: fixed;
  font-weight: 800;
  width: 100%
}
.page__bd{
  padding-top:90rpx; 
}
.weui-flex{
  text-align: center;
  padding: 5px 0px;
}
.weui-flex .weui-flex__item{ 
  border-right:1px solid #ccc; 
}
.weui-flex .weui-flex__item:last-child{
