}
.list-1{
  background: aliceblue;
}
.weui-flex__item{
  font-size: 0.9em;
}
.loadMore{
  color:#aaa;
  text-align: center;
  font-size: 0.9em;
  padding: 5px;
  border-top:1px solid #ccc;
  border-bottom:1px solid #ccc;
}
button{
  background:#64a4fc;
  color: #fff
}
.weui-flex-btn-group .weui-flex__item {
  border: 0;
}


