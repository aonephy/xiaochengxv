<!--pages/profile/index.wxml-->
<view class="page">
  <view class="page__bd">
      <view class='userinfo'>
        <image class="userinfo-avatar" src='{{userInfo.avatarUrl}}'></image>
        <view class='userinfo-nickname'>{{userInfo.nickName}}</view>
      </view>
      <view class="weui-cells__title">您的设备信息</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd">您的手机型号：</view>
                <view class="weui-cell__ft">{{phoneInfo.model}}</view>
            </view>
            <view class="weui-cell">
                <view class="weui-cell__bd">您的操作系统：</view>
                <view class="weui-cell__ft">{{phoneInfo.platform}}</view>
            </view>

            <view class="weui-cell">
                <view class="weui-cell__bd">您的微信版本号：</view>
                <view class="weui-cell__ft">{{phoneInfo.version}}</view>
            </view>
        </view>
  </view>
</view>