<view class="page">
   
    <view class="page__bd">
      <view class="weui-btn-area">
       
          <view class="weui-cells weui-cells_after-title box">
            <view class="weui-cell">
                <view class="weui-cell__bd">
                    <textarea class="weui-textarea" focus='{{focus}}' bindinput='Input' placeholder="请输入文本" style="height: 3.3em" />
                    <view class="weui-textarea-counter">0/200</view>
                </view>
            </view>
          </view>
          <view class="box">
              <button type='primary' bindtap='Submit'>查询</button>
          </view>
          
          <view class="box result">
              <view>{{content}}</view>
          </view>
      
      </view>
    </view>

</view>